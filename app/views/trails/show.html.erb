<div class="page-header">
  <%= link_to trails_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_trail_path(@trail), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show trail</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @trail.name %></dd>

  <dt>Campsite:</dt>
  <dd><%= @trail.campsite %></dd>

  <dt>Water source:</dt>
  <dd><%= @trail.water_source %></dd>

  <dt>Created</dt>
  <dd><%= @trails.created_at %></dd>

</dl>
